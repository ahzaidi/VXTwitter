{
  "manifest_version": 3,
  "name": "VXTwitter URL Modifier",
  "version": "1.0",
  "description": "Modifies Twitter URLs to start with 'vx' and copies the modified URL.",
  "permissions": [],
  "host_permissions": ["https://twitter.com/*"],
  "action": {},
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["https://twitter.com/*"],
      "js": ["content.js"]
    }
  ]
}
